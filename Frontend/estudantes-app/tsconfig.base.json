{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "forceConsistentCasingInFileNames": true,
    "strict": true, // ativa um conjunto de verificações de tipo rigorosas
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "sourceMap": true, // gera arquivos .map para ajudar na depuração
    "declaration": false,
    "downlevelIteration": true, // melhora a compatibilidade de loops para js antigo
    "experimentalDecorators": true, // necessário para os decorators do angular
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2022",
    "module": "es2022",
    "useDefineForClassFields": false, // configuração padrão do angular
    "lib": [
      "es2022",
      "dom"
    ]
  }
}
